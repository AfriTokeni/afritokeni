# =============================================================================
# JUNO CONFIGURATION
# Note: VITE_SATELLITE_ID is auto-injected by @junobuild/vite-plugin from juno.config.ts
# Configure satellite IDs in juno.config.ts instead
# =============================================================================

# =============================================================================
# EMAIL CONFIGURATION (Server-side only)
# =============================================================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM_DOMAIN=afritokeni.com

# =============================================================================
# AFRICA'S TALKING SMS/USSD (Server-side only)
# =============================================================================
# Use 'sandbox' for testing, real credentials for production
AT_USERNAME=sandbox
AT_API_KEY=your_africas_talking_api_key_here
AT_SHORT_CODE=22948

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
SMS_SERVER_PORT=3002
WEBHOOK_BASE_URL=http://localhost:3002

# =============================================================================
# PUBLIC CONFIGURATION (Client-side - use PUBLIC_ prefix)
# =============================================================================
PUBLIC_API_URL=https://your-api-url.com/
PUBLIC_AGENT_INITIAL_CASH_BALANCE=25000000
PUBLIC_USERBACK_TOKEN=your-userback-token

# =============================================================================
# DFX CANISTER CONFIGURATION (Source of Truth)
# =============================================================================
DFX_VERSION='0.29.2'
DFX_NETWORK='playground'

# Domain canister IDs (auto-generated by `dfx deploy`)
CANISTER_ID_USER_CANISTER='your-user-canister-id'
CANISTER_ID_WALLET_CANISTER='your-wallet-canister-id'
CANISTER_ID_CRYPTO_CANISTER='your-crypto-canister-id'
CANISTER_ID_AGENT_CANISTER='your-agent-canister-id'
CANISTER_ID_DATA_CANISTER='your-data-canister-id'
CANISTER_ID_USSD_CANISTER='your-ussd-canister-id'

# Public variables for frontend (SvelteKit convention)
# IMPORTANT: Keep these in sync with the CANISTER_ID_* entries above
PUBLIC_DFX_NETWORK='playground'
PUBLIC_USER_CANISTER_ID='your-user-canister-id'
PUBLIC_WALLET_CANISTER_ID='your-wallet-canister-id'
PUBLIC_CRYPTO_CANISTER_ID='your-crypto-canister-id'
PUBLIC_AGENT_CANISTER_ID='your-agent-canister-id'
PUBLIC_DATA_CANISTER_ID='your-data-canister-id'
PUBLIC_USSD_CANISTER_ID='your-ussd-canister-id'

# DFX metadata (auto-generated - do not edit manually)
CANISTER_ID='your-canister-id'
CANISTER_CANDID_PATH='/path/to/your/canister.did'
